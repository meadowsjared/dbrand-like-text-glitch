{
  "name": "html-css",
  "version": "1.0.0",
  "description": "A template for HTML and CSS",
  "main": "index.html",
  "scripts": {
    "build:css": "node-sass styles.scss -o ./",
    "watch:css": "npm run build:css && node-sass styles.scss -o ./ -w -r",
    "start": "serve"
  },
  "keywords": [
    "html",
    "css"
  ],
  "author": "Ives van Hoorne",
  "license": "MIT",
  "devDependencies": {
    "node-sass": "^9.0.0",
    "serve": "11.2.0"
  }
}
